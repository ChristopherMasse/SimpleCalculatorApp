<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NumeralButtonTheme">
<!--        parent="@style/Widget.AppCompat.Button.Borderless">-->
        <item name="android:textSize">26sp</item>
        <item name="android:minHeight">75dp</item>
        <item name="android:layout_width">0dp</item>
<!--        <item name="android:selectableItemBackground">true</item>-->
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
<!--        <item name="android:hapticFeedbackEnabled">true</item>-->
        <item name="android:background">@color/button_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    
    <style name="OperatorButtonTheme" parent="NumeralButtonTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="ClearButtonTheme" parent="NumeralButtonTheme">
        <item name="android:background">@color/calc_color</item>
    </style>
</resources>
